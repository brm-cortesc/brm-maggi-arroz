@media (max-width:780px)
  .pasos
    .paso
      max-width 100%

    &-3
      margin-top 0

  .text-intro
    font-size 2.6rem
    span
      display inline

@media (max-width:768px)
  body
    background-position 0 15%, 50% 0
    background-size 100%, 134%

  .logo
    display block
    margin 1rem auto
    max-width 90%
    width 51.2rem

@media (max-width:620px)
  body
    background-position 0 10%, 50% 0
    background-size 100%, 134%

  .logo
    max-width 60%

@media (max-width:580px)
  body
    background-position 0 7%, 50% 0

@media (max-width:500px)
  .puntos
    max-width 100%

@media (max-width:480px)
  body
    background-position 50% 5%, 50% 0
    background-size 152%, 190%
  footer
    a
      display block
      text-align center

    span
      display none

  .title-puntos
    padding 1rem 2rem 1rem 9rem

@media (max-width:440px)
  .title
    &-cant
      font-size 4rem

      span
        font-size 2.2rem

    &-puntos
      font-size 2.3rem
      &::before
        top -9%

@media (max-width:400px)
  body
    background-position 50% 3%, 50% 0
    background-size 152%, 180%

  .form-control
    max-width 62%
  .logo
    margin-bottom 0
    margin-top 7rem
    max-width 81%
  .title-puntos
    font-size 1.9rem
    padding 1rem 2rem 1rem 8.8rem
    &::before
      top 0%


@media (max-width:340px)
  .title
    &-cant
      font-size 3rem

      span
        font-size 1.7rem
        
@media (min-width:1650px)
  .form-group
    label
      left 3.5rem
      
  .text-intro
    margin-top 6rem
    
@media (min-width:1840px)
  .form-group
    label
      left 4.5rem
      
  .text-intro
    margin-top 8rem
    
